<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>Register Form</title>
    <link rel="stylesheet" href="login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@2.0.7/css/boxicons.min.css">
</head>
</head>

<body>

<div class="big">


    <div class="centre">
    <div class="container">
        <div class="text">
            Register Now
        </div>
        <form class="form" action="/register" method="post"></form>
       
            <div class="input-wrapper">
                <i class='bx bx-user-circle'></i>
                <input type="text" name="username" placeholder="username">
            </div>
            <div class="input-wrapper">
                <i class='bx bx-envelope'></i>
                <input type="email" name="email" placeholder="email">
            </div>
            <div class="input-wrapper">
                <i class='bx bx-lock-alt'></i>
                <input type="password" name="password" placeholder="password">
            </div>
            <div class="error-message"></div>

            
                <button class="btn" type="submit">Signup</button>
            </form>
            
            <div class="signup-link">
                Already a member? <a href="/login">Login now</a>
            </div>
        </form>
    </div>
</div>
    
    <div class="img">
        <h2>QUERYNEST</h2>
        <lottie-player src="https://lottie.host/8275e548-8c63-471a-a0e4-17f68b8138ae/dbEm2HmNc5.json" background="#FFFFFF" speed="1" style="width: 300px; height: 300px" loop  autoplay direction="1" mode="normal"></lottie-player>
    <div>Your QUESTIONS Our SOLUTIONS</div></div>
</div>
</body>


<script>
    let form = document.querySelector('.form');
    form.addEventListener('submit', (e) => {
        e.preventDefault(); // Prevent the default form submission

        let formData = new FormData(form);
        let data = {
           
            username:formData.get('username'),
            email: formData.get('email'),
            password: formData.get('password')
        };

        fetch('/register', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data)
        })
        .then(response => response.json())
        .then(data => {
            if (!data.success) {
                let errorMessage = document.querySelector('.error-message');
                errorMessage.innerText = data.msg;
            }
            else{
                window.location.href = data.redirect;
            }
        })
        .catch(err => {
            console.log(err);
        });
    });
</script>
</html>
<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>